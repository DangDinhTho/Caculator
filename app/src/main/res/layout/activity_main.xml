<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="10"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <TextView
        android:id="@+id/txtShow"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:background="#C1C1C1"
        android:layoutDirection="rtl"
        android:textSize="100sp"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:text="0"
        android:maxLength="6"
        >


    </TextView>

    <TableLayout
        android:weightSum="5"
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0px">

        <TableRow android:layout_weight="1"
            android:layout_marginLeft="3pt"
            android:layout_marginRight="3pt"
            android:layout_marginTop="3pt">

            <Button

                android:id="@+id/ce"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="CE"
                android:textSize="30dp"
                android:background="#C1C1C1"
                android:layout_marginRight="3pt"
                android:onClick="numberEvent"
                >
            </Button>

            <Button
                android:id="@+id/c"
                android:background="#C1C1C1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="C"
                android:textSize="30dp"
                android:layout_marginRight="3pt"
                android:onClick="numberEvent"
                >


            </Button>
            <Button
                android:id="@+id/bs"
                android:background="#C1C1C1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="BS"
                android:textSize="30dp"
                android:layout_marginRight="3pt"
                android:onClick="numberEvent"
                >


            </Button>
            <Button
                android:id="@+id/divide"
                android:background="#C1C1C1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="/"
                android:textSize="30dp"
                android:onClick="numberEvent"

                >


            </Button>

        </TableRow>

        <TableRow android:layout_weight="1"
            android:layout_marginLeft="3pt"
            android:layout_marginRight="3pt"
            android:layout_marginTop="3pt">
            <Button
                android:id="@+id/n7"
                android:background="#DADADA"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="30dp"
                android:onClick="numberEvent"
                >
            </Button>

            <Button
                android:id="@+id/n8"
                android:background="#DADADA"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="30dp"
                android:onClick="numberEvent"
                >


            </Button>
            <Button
                android:id="@+id/n9"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="30dp"
                android:background="#DADADA"
                android:onClick="numberEvent"
                >


            </Button>
            <Button
                android:id="@+id/multiply"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="x"
                android:textSize="30dp"
                android:background="#C1C1C1"
                android:onClick="numberEvent"
                >


            </Button>
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_marginLeft="3pt"
            android:layout_marginRight="3pt"
            android:layout_marginTop="3pt">
            <Button
                android:id="@+id/n4"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="30dp"
                android:background="#DADADA"
                android:onClick="numberEvent"
                >
            </Button>

            <Button
                android:id="@+id/n5"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="30dp"
                android:background="#DADADA"
                android:onClick="numberEvent"
                >


            </Button>
            <Button
                android:id="@+id/n6"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="30dp"
                android:background="#DADADA"
                android:onClick="numberEvent"
                >


            </Button>
            <Button
                android:id="@+id/minus"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="30dp"
                android:background="#C1C1C1"
                android:onClick="numberEvent"
                >


            </Button>

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_marginLeft="3pt"
            android:layout_marginRight="3pt"
            android:layout_marginTop="3pt">
            <Button
                android:id="@+id/n1"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="30dp"
                android:background="#DADADA"
                android:onClick="numberEvent"
                >
            </Button>

            <Button
                android:id="@+id/n2"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="30dp"
                android:background="#DADADA"
                android:onClick="numberEvent"
                >


            </Button>
            <Button
                android:id="@+id/n3"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="30dp"
                android:background="#DADADA"
                android:onClick="numberEvent"
                >


            </Button>
            <Button
                android:id="@+id/add"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="30dp"
                android:background="#C1C1C1"
                android:onClick="numberEvent"
                >


            </Button>
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_marginLeft="3pt"
            android:layout_marginRight="3pt"
            android:layout_marginBottom="3pt"
            android:layout_marginTop="3pt">
            <Button
                android:id="@+id/add_minus"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="+/-"
                android:textSize="30dp"
                android:background="#C1C1C1"
                android:onClick="numberEvent"
                >
            </Button>

            <Button
                android:id="@+id/n0"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="30dp"
                android:background="#DADADA"
                android:onClick="numberEvent"
                >


            </Button>
            <Button
                android:id="@+id/dot"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="."
                android:textSize="30dp"
                android:background="#C1C1C1"
                android:onClick="numberEvent"
                >


            </Button>
            <Button
                android:id="@+id/equals"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="30dp"
                android:background="#C1C1C1"
                android:onClick="numberEvent"
                >


            </Button>
        </TableRow>

    </TableLayout>


